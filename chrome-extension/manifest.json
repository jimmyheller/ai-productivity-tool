{
  "name": "AI Productivity Sidebar",
  "description": "Capture and process thoughts quickly with AI.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "sidePanel"],
  "host_permissions": ["https://ai-productivity-tool.vercel.app/*"],
  "action": {
    "default_title": "AI Assistant",
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png"
  }
}